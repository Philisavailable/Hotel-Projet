{% extends 'base.html.twig' %}

{% block title %}Avis | HouseHotel{% endblock %}

{% block body %}
<div class="col-6 mx-auto my-5 text-center">
    <h1 class="my-4">{% trans %}Laissez-nous votre avis{% endtrans %} !</h1>

    {{ form_start(form) }}
    <div class="row">
        <div class="col-6">{{ form_row(form.name)}}</div>
        <div class="col-6">{{ form_row(form.category)}}</div>
    </div>

    {{ form_end(form) }}

</div>

