{% for avis in avisList | reverse %}
<div class="col-5 mx-auto">
    <hr>
    <h4 class="alert-heading">{{ avis.name}} <span class="h6">{% trans %}à posté{% endtrans %} {{ avis.createdAt | ago(locale='fr') }}</span></h4>
    <h6><span>{% trans %}Catégorie{% endtrans %} : {{ avis.category | title}}</span></h6>
    <p>{{ avis.comment | raw }}</p>
    <hr>
</div>
{% endfor %}

