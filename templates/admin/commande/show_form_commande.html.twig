{% extends 'base.html.twig' %}

{% block title %}Listes de commandes{% endblock %}

{% block body %}

 <h1 class="text-center my-4">Ajouter une commande</h1>

    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
    
        <table class="table">
                        <thead>
                            <tr class="text-center">
                                <th>#</th>
                                <th>chambre</th>
                                <th>Date-arrivee</th>
                                <th>date_depart</th>
                                <th>prenom</th>
                                <th>nom</th>
                                <th>telephone</th>
                                <th>email</th>
                                <th>date et heure d'enregistrement</th>
                                <th>Actions</th>

                            </tr>
                        </thead>
                        <tbody>
                            {% for commande in commandes %}
                        
                        <tr class="text-center align-middle">
                            <td>{{ commande.id }}</td>
                            <td>{{ commande.chambre | capitalize }}</td>
                            <td>{{ commande.date_debut}} > </td>
                            <td>{{ commande.date_fin}}</td>
                            <td>{{ commande.prenom}}</td>
                            <td>{{ commande.nom }}</td>
                            <td>{{ commande.email }} â‚¬</td>
                            <td>{{ commande.telephone }}</td>
                            <td>{{ commande.createdAt | date('d/m/y') }}</td>
                            <td>{{ commande.updatedAt | date('d/m/y')}}</td>
                            <td>
                                
                                <a href="{{ path('update_commande',{'id': commande.id}) }}" class="btn btn-sm btn-info"><i class="bi bi-pencil-square"></i></a>
                                <a href="{{ path('delete_commande',{'id': commande.id}) }}" class="btn btn-sm btn-info"><i class="btn btn-danger bi bi-trash-fill"></i></a>
                                <a href="{{ path('delete_commande',{'id': commande.id}) }}" class="btn btn-sm btn-info"><i class="bi bi-search"></i></a>
                                
                            </td>
                        
                        </tr>
                            
                            
                            {% endfor %}
                        </tbody>
            </table>

                </div>


        </div>
    </div>



{% endblock %}
