{% extends "base.html.twig" %}

{% block title %}Backoffice | Actualites{% endblock %}


{% block body %}

  <h3 class="lien-hotel text-center my-2">Ajouter une Actualites</h3>

<div class="my-5 mx-auto col-6">
    {{ form_start(form)}}
        <div class="row ">
          <div class="col-8 mx-auto">
            <div class="col-12">{{ form_row(form.titre) }}</div>
          <div class="col-12">{{ form_row(form.description) }}</div>
        </div>
        
        </div>
    {{ form_end(form)}}
</div>
	
	<div class="row">
		<div class="col-10 mx-auto">
            <h1 class="text-center my-4">Actualites</h1>
			<table class="table">
				<thead>
					<tr class="text-center">
						<th>#</th>
						<th>Titre</th>
						<th>Description</th>
						<th>Options</th>
					</tr>
				</thead>
				<tbody>
					{% for actualite in actualites %}
						<tr class="text-center">
							<td>{{ actualite.titre }}</td>
							<td>{{ actualite.description }}</td>
							
							
							<td>
                                <a href="{{ path('update_actualite', {'id': actualite.id}) }}" class="text-info" title="Modifier la catégorie"><i class="btn btn-primary bi bi-pencil-square"></i></a>
                                <a href="{{ path('delete_actualite', {'id': actualite.id}) }}" class="text-danger" title="Archiver la catégorie" onclick="return confirm('Cette action va supprimer une actualite. Voulez-vous continuer ?')"><i class="btn btn-danger bi bi-trash-fill"></i></a>
                            </td>
						</tr>
					{% endfor %}
				</tbody>
            </table>
			</div>
		</div>

{% endblock %}
